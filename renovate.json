{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "automergeType": "branch",
  "automergeStrategy": "auto",
  "platformAutomerge": true,
  "baseBranches": ["main"],
  "commitMessagePrefix": "chore(deps): "
}
